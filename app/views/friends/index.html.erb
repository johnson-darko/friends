
<% if user_signed_in? %>

<h1>Friends List</h1>
<table class="table table-striped table-bordered table-hover">
  <thead >
    <tr class="bg-secondary">
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

<div id="friends">
  <% @friends.each do |friend| %>
  <% if friend.user == current_user %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= link_to "Show friend", friend, class: "btn btn-outline-success btn-sm" %></td>
        <td><%= link_to "Edit", edit_friend_path(friend), class: "btn btn-outline-warning btn-sm" %></td>
        <td><%= button_to 'Delete', friend, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "btn btn-danger mx-4" %></td>
      </tr>
      <% end %>
       <% end %>
</div>
  </tbody>
  <table>
  <br>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
